<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/transparent"
            android:padding="5dp"
            android:visibility="visible">

            <View
                android:id="@+id/headerIconLeft"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="5dp" />

            <View
                android:id="@+id/headerIconRight"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/headerBack"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/headerIconLeft"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/icon_back" />

            <ImageView
                android:id="@+id/headerMenu"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/headerIconLeft"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/icon_menu" />

            <TextView
                android:id="@+id/tv_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/headerIconRight"
                android:layout_centerVertical="true"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/headerIconRight"
                android:layout_centerVertical="true"
                android:text="Delete"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/headerIconRight"
                android:layout_toRightOf="@id/headerIconLeft"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </RelativeLayout>

    <fragment
        android:id="@+id/nagigation_drawer"
        android:name="com.ta.finalexam.Fragment.Navigator_Menu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/fragment_menu_nav">
    </fragment>


</android.support.v4.widget.DrawerLayout>